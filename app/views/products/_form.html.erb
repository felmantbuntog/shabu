<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="center jumbotron"
    <div class="actions">
      <%= f.input :name, input_html: { class: 'form-control' }  %>
      <%= f.input :description , :required => false,  as: :text , input_html: { class: 'form-control' }  %>
      <%= f.input :price, :required => false, input_html: { class: 'form-control' }  %>
      <%= f.input :category, input_html: { class: 'form-control' }, as: :select  %>
      <%= f.input :image, :required => false , as: :file %>
      <%= f.button :submit , "Add" , class: 'btn btn-success'  %>
    </div>
<% end %>
