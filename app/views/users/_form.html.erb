<div class="container content">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2" >
		<%= simple_form_for :user,:html=> {:id=>'frm_registration'},url:users_path  do |f| %>
			<%= content_tag :div, :class => 'reg-page' do %>
				<%= content_tag :div, :class => 'reg-header' do %>
					<%= content_tag :h2 do %>Register a new account<% end %>	
					<%= content_tag :p do %>
						Already Signed Up? Click 
						<%= content_tag :a , :href=>'#',:class=>'color-green' do %>Sign In<% end %>
						 to login your account.
					<% end %>	
				<% end %>

				  <% if @user.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this users information from being saved:</h2>

				      <ul>
				      <% @user.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>
				
				<%= f.input :email,label: 'Email Address', input_html: { class: 'form-control margin-bottom-20 ' }  %>
				<%=  content_tag :div, :class=>'row uPasswordContainer' do %>
					<%=  content_tag :div, :class=>'col-sm-6' do %>
						<%= f.input :password,input_html: {class: 'form-control margin-bottom-20' }  %>
					<% end %>

					<%=  content_tag :div, :class=>'col-sm-6' do %>
					    <%= f.input :password_confirmation, input_html: { class: 'form-control margin-bottom-20'} %>
					<% end %>
				<% end %>
				
				<%= f.input :firstname ,input_html: {class: 'form-control margin-bottom-20'} %>
				<%= f.input :lastname ,input_html: {class: 'form-control margin-bottom-20'} %>
				<%= f.input :address ,input_html: {class: 'form-control margin-bottom-20'} %>
				<%= f.input :phonenumber ,input_html: {class: 'form-control margin-bottom-20'} %>
				<%= f.input :other_info,:as => :text, input_html: {class: 'form-control margin-bottom-20'}  %>
				<hr/>
				<%=  content_tag :div, :class=>'row' do %>
					<%= content_tag :div, :class=>'col-lg-12' do %>
		  				<%= content_tag :label do %>
							By clicking Register, you agree to our <%= link_to 'Terms and Condition','#',{:class => 'color-green'} %>
		  				<% end%>
					<% end %>
				<% end %>

				<%=  content_tag :div, :class=>'row text-right ' do %>
					<%= f.button :submit , "Register" , class: 'btn btn-success'  %>
				<% end %>
		
			<% end %>
		<% end %>
	</div>
	</div>

</div>
