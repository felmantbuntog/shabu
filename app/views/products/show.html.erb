<script src="https://maps.googleapis.com/maps/api/js"></script>
<div class="container-fluid" style="width:80%">
	<p id="notice"><%= notice %></p>
    <div class="row">
        <div class="col-xs-8">
        	<h3>Item no: <%= @product.name %></h3>
        	<p>Category: <%= @product.category %></p>
        	<%= image_tag('no-photo.gif' , id: "img_prev") unless @product.image? %>
			<%= image_tag @product.image_url(:thumb).to_s %>
			<p>Price: <%= @product.price %></p>
            <p>Description:<br /><%= @product.description %></p>
            <p>Contact Owner: </p>
            <p><textarea class="form-control" type="text" placeholder="Your message here" /></textarea></p>
            <p><button class="btn btn-default">Send</button></p>
        </div>
        <div class="col-xs-4 padding-small" style="background-color:lightgrey">
            <p>Seller Info:</p>
            <p>Name: </p>
            <p>Date Posted: </p>
            <p>Contact Number: </p>
            <p>Address: </p>
			<div style="height:300px">
				<div id="map-canvas" style="height:100%"></div>
			</div>
        </div>
    </div>
</div>

<script>
	function initialize() {
		var mapCanvas = document.getElementById('map-canvas');
		var mapOptions = {
			center: new google.maps.LatLng(10.3352813, 123.9340872),
			zoom: 17,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		}
		var map = new google.maps.Map(mapCanvas, mapOptions)
	}
	
	//$(window).load(function(){
		window.setTimeout(initialize, 1000)
	//});
</script>
